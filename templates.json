{
  "version": "2",
  "templates": [
    {
      "type": 2,
      "title": "Dokku",
      "description": "Dokku setup as a compose file",
      "categories": ["PaaS"],
      "platform": "linux",
      "logo": "",
      "repository": {
        "url": "https://github.com/andys3dworld/portainer",
        "stackfile": "templates/stacks/dokku/docker-compose.yml"
      },
      "env": [
        {
          "name": "VERSION",
          "label": "Dokku version",
          "description": "Version of Dokku to use ('latest' if empty)",
          "default": "latest"
        },
        {
          "name": "DOKKU_HOSTNAME",
          "label": "Dokku hostname",
          "description": "Global hostname to be registered by Dokku"
        },
        {
          "name": "VOLUME_PATH",
          "label": "Dokku volume path",
          "description": "Host path to be bound to /mnt/dokku (`/var/lib/dokku` if empty)",
          "default": "/var/lib/dokku"
        },
        {
          "name": "DOKKU_HOST_ROOT",
          "label": "Dokku host root",
          "description": "Image build cache path. Generally set to <data dir> + '/home/dokku'",
          "default": "/var/lib/dokku/home/dokku"
        },
        {
          "name": "SSH_PORT",
          "label": "SSH port",
          "description": "Host port to expose SSH port of Dokku (22 if empty)",
          "default": "22"
        },
        {
          "name": "HTTP_PORT",
          "label": "HTTP port",
          "description": "Host port to expose HTTP port of Dokku (80 if empty)",
          "default": "80"
        },
        {
          "name": "HTTPS_PORT",
          "label": "HTTPS port",
          "description": "Host port to expose HTTPS port of Dokku (443 if empty)",
          "default": "443"
        }
      ]
    },
    {
      "type": 2,
      "title": "code-server",
      "description": "VS Code server",
      "note": "code it!.",
      "categories": ["andys3dworld"],
      "platform": "linux",
      "logo": "https://code.visualstudio.com/assets/branding/app-icon.png",
      "repository": {
        "url": "https://github.com/andys3dworld/portainer",
        "stackfile": "templates/stacks/code-server/docker-compose.yml"
      },
      "env": [
        {
          "name": "VS_CODE_PASSWORD",
          "label": "password",
          "description": "password",
          "default": "password"
        },
        {
          "name": "VS_CODE_SUDO_PASSWORD",
          "label": "sudo password",
          "description": "sudo password",
          "default": "password"
        },
        {
          "name": "DOMAIN_NAME",
          "label": "DOMAIN_NAME",
          "default": "code-server.moose"
        },
        {
          "name": "CONFIG_PATH",
          "label": "CONFIG_PATH",
          "default": "/virt/code-server/config"
        },
        {
          "name": "GRAV_PAGES_PATH",
          "label": "GRAV_PAGES_PATH",
          "default": "/virt/grav/config/www/user/pages"
        },
        {
          "name": "HTTPS_PORT",
          "label": "HTTPS_PORT",
          "default": "8443"
        }
      ]
    }
  ]
}
